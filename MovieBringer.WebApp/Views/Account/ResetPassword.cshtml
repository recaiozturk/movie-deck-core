@model MovieBringer.Core.Models.ViewModel.Account.ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="sign section--bg" data-bg="img/section/section.jpg">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="sign__content">
                    <!-- authorization form -->
                    <form asp-action="ResetPassword" class="sign__form">
                        <a href="index.html" class="sign__logo">
                            <img src="~/Resource/MainHotFlix/img/logo.svg" alt="">
                        </a>
                        <input type="hidden" asp-for="Token" />
                        <input type="hidden" asp-for="UserId" />
                        <div asp-validation-summary="All" class="mb-danger mb-3"></div>

                        <div class="sign__group">
                            <input type="password" asp-for="Password" class="sign__input" placeholder="New Password">
                        </div>

                        <div class="sign__group">
                            <input type="password" asp-for="ConfirmPassword" class="sign__input" placeholder="New Confirm Password">
                        </div>

                        <button class="sign__btn" type="submit">Reset Password</button>

                    </form>
                    <!-- end authorization form -->
                </div>
            </div>
        </div>
    </div>
</div>



