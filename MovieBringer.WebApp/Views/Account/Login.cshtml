@model MovieBringer.Core.Models.ViewModel.Account.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="sign section--bg" data-bg="img/section/section.jpg">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="sign__content">
                    <form asp-controller="Account" asp-action="Login" class="sign__form">
                        <input asp-for="ReturnUrl" type="hidden" value="@ViewBag.ReturnUrl" />
                        <a href="index.html" class="sign__logo">
                            <img src="~/Resource/MainHotFlix/img/logo.svg" alt="">
                        </a>
                        <h1 class="sign__text">Sign In</h1>

                        @if (ViewData.ModelState.ContainsKey("CustomErrorKey"))
                        {
                            var customErrors = ViewData.ModelState["CustomErrorKey"].Errors;

                            @foreach (var error in customErrors)
                            {
                                <div class="mb-danger mb-3">@error.ErrorMessage</div>
                            }
                        }

                        <div class="sign__group">
                            <input asp-for="Email" class="sign__input" placeholder="Email">
                            <span class="mb-danger" asp-validation-for="Email"></span>
                        </div>

                        <div class="sign__group">
                            <input type="Password" asp-for="Password" class="sign__input" placeholder="Password">
                            <span class="mb-danger" asp-validation-for="Password"></span>
                        </div>

                        <div class="sign__group sign__group--checkbox">
                            <input asp-for="RememberMe" type="checkbox">
                            <label asp-for="RememberMe">Remember Me</label>
                        </div>
                        <button class="sign__btn" type="submit">Sign in</button>
                        <span class="sign__text">Don't have an account? <a asp-controller="Account" asp-action="Register">Sign up!</a></span>
                        <span class="sign__text"><a asp-action="ForgetPassword">Forgot password?</a></span>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

