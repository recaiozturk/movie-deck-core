
@model MovieBringer.Core.Models.ViewModel.Account.RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="sign section--bg" data-bg="img/section/section.jpg">
    <div class="container mt-5">
        <div class="row">
            <div class="col-12">
                <div class="sign__content">
                    <form asp-controller="Account" asp-action="Register" class="sign__form">

                        <a href="index.html" class="sign__logo">
                            <img src="~/Resource/MainHotFlix/img/logo.svg" alt="">
                        </a>
                        <h1 class="sign__text">Sign Up</h1>

                        @if (ViewData.ModelState.ContainsKey("CustomErrorKey"))
                        {
                            <div asp-validation-summary="All" class="mb-danger mb-3">
                            </div>
                        }

                        <div class="sign__group">
                            <input asp-for="UserName" class="sign__input" placeholder="UserName">
                            <span class="mb-danger" asp-validation-for="UserName"></span>
                        </div>

                        <div class="sign__group">
                            <input asp-for="Name" class="sign__input" placeholder="Name">
                            <span class="mb-danger" asp-validation-for="Name"></span>
                        </div>

                        <div class="sign__group">
                            <input asp-for="Surname" class="sign__input" placeholder="Surname">
                            <span class="mb-danger" asp-validation-for="Surname"></span>
                        </div>

                        <div class="sign__group">
                            <input asp-for="Email" class="sign__input" placeholder="Email">
                            <span class="mb-danger" asp-validation-for="Email"></span>
                        </div>

                        <div class="sign__group">
                            <input type="password" asp-for="Password" class="sign__input" placeholder="Password">
                            <span class="mb-danger" asp-validation-for="Password"></span>
                        </div>

                        <div class="sign__group">
                            <input type="password" asp-for="ConfirmPassword" class="sign__input" placeholder="Confirm Password">
                            <span class="mb-danger" asp-validation-for="ConfirmPassword"></span>
                        </div>
                        <button id="submitBtn" type="submit" class="sign__btn">Sign up</button>
                        <span class="sign__text">Already have an account? <a asp-controller="Account" asp-action="Login">Sign in!</a></span>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
